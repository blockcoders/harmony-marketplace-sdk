{
  "name": "harmony-marketplace-sdk",
  "version": "1.0.0",
  "description": "Harmony Marketplace SDK",
  "author": "Blockcoders <engineering@blockcoders.io>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "./lib/index.js",
  "module": "./lib.esm/index.js",
  "jsnext:main": "./lib.esnext/index.js",
  "types": "./lib/index.d.ts",
  "engineStrict": false,
  "engines": {
    "node": "^12.x || >=14.x || >=16.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "NODE_ENV=test mocha --require ts-node/register src/**/*.spec.ts",
    "test:watch": "NODE_ENV=test mocha --watch --watch-files src/**/*.ts --require ts-node/register src/**/*.spec.ts",
    "test:cov": "nyc npm run test",
    "clean": "rm -rf ./lib ./lib.esm ./lib.esnext",
    "build": "tsc --build ./tsconfig.json",
    "build-all": "npm run build-cjs && npm run build-esnext && npm run build-esm",
    "build-cjs": "tsc -p tsconfig.json --outDir lib -t es3 -m commonjs",
    "build-esnext": "tsc -p tsconfig.json --outDir lib.esnext -t es2015 -m commonjs",
    "build-esm": "tsc -p tsconfig.json --outDir lib.esm -t es2015 -m es2015",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublishOnly": "npm run lint:ci && npm run test && npm run clean && npm run build-all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockcoders/harmony-marketplace-sdk.git"
  },
  "keywords": [
    "harmony",
    "marketplace",
    "blockchain",
    "nft",
    "hr721",
    "hr1155",
    "harmony-sdk",
    "one"
  ],
  "bugs": {
    "url": "https://github.com/blockcoders/harmony-marketplace-sdk/issues"
  },
  "homepage": "https://github.com/blockcoders/harmony-marketplace-sdk#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.10",
    "@types/sinon": "^10.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.5",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.5.2",
    "@harmony-js/contract": "^0.1.56",
    "@harmony-js/core": "^0.1.57",
    "@harmony-js/utils": "^0.1.56",
    "ethers": "^5.5.3"
  }
}
